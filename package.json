{
  "name": "backlog-js",
  "version": "0.0.1",
  "description": "Backlog API v2 client for browser and node",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com:vvatanabe/backlog-js.git"
  },
  "scripts": {
    "test": "mocha --timeout 20000 --compilers ts:espower-typescript/guess test/test*.ts",
    "test-cov": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec test/**/test*.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm run build-tsc && npm run build-dist && npm run build-minify && npm run build-demo",
    "build-dist": "browserify --standalone Backlog src/index.js -o dist/backlog.js",
    "build-minify": "uglifyjs dist/backlog.js -o dist/backlog.min.js",
    "build-demo": "browserify --standalone Demo demo/index.js -o demo/demo.js",
    "build-tsc": "tsc --removeComments",
    "build-tsd": "tsc -d"
  },
  "author": "vvatanabe",
  "license": "MIT",
  "dependencies": {
    "isarray": "^1.0.0",
    "isobject": "^2.1.0"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "coveralls": "^2.11.9",
    "dotenv": "^2.0.0",
    "espower-typescript": "^5.0.1",
    "isomorphic-fetch": "^2.2.1",
    "istanbul": "^0.4.3",
    "mocha": "^2.5.3",
    "ncp": "^2.0.0",
    "nock": "^8.0.0",
    "power-assert": "^1.4.1",
    "typescript": "^1.8.10",
    "uglify-js": "^2.6.2"
  }
}
